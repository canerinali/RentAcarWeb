                        <div class="row">
                            <div class="col-md-4">
                                <div class="aa-single-service">
                                    <div class="aa-service-icon">
                                        <a href="/AracAlmak"><span class="fa fa-car"></span></a>
                                    </div>
                                    <div class="aa-single-service-content">
                                        <h4><a href="/uzundonemarac">Uzun dönem kiralamak istiyorum</a></h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <a href="/Konsinye">
                                    <div class="aa-single-service">
                                        <div class="aa-service-icon">
                                            <a href="/Konsinye"><span class="glyphicon glyphicon-random"></span></a>
                                        </div>
                                        <div class="aa-single-service-content">
                                            <h4><a href="/Konsinye">Konsinye</a></h4>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <div class="aa-single-service">
                                    <div class="aa-service-icon">
                                        <span class="fa fa-star-half-empty"></span>
                                    </div>
                                    <div class="aa-single-service-content">
                                        <h4><a>Güvenli Hizmet</a></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Service section -->
<!-- Our Agent Section-->
<section id="aa-agents">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-agents-area">
                    <div class="main-heading-holder">
                        <div class="main-heading sytle-2" style="text-align:center">
                            <h2>Kısa Dönem Araçlar</h2>
                        </div>
                    </div>
                    <!-- agents content -->
                    <div class="aa-agents-content" style="margin:5%">
                        <ul class="aa-agents-slider">
                            @foreach (Post post in Model)
                            {
                                <li class="slick-slide" data-slick-index="3" aria-hidden="true" tabindex="-1" role="option" aria-describedby="slick-slide03" style="width: 293px;">
                                    <div class="aa-single-agents">
                                        <div class="aa-agents-img">
                                            <img style="height:240px" src="~/images/@post.PostImageFilename" alt="agent member image">
                                        </div>
                                        <div class="aa-agetns-info">
                                            <h4><a href="#" tabindex="-1">@post.Category.Title</a></h4>
                                            <span>Aylık Tutarı</span>

                                            <span>@post.MonthlyPrice</span>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- / Our Agent Section-->
