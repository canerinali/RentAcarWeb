                    <div class="page_content_wrapper page_main_content sidebar_content full_width fixed_column">
                        <div>

                            <div id="16379722761493507413" class="portfolio_filter_wrapper gallery grid three_cols" data-columns="3">
                                @foreach (Post post in Model.Where(x => x.Category.Title == "Ekonomik Araçlar").Take(3))
                                {
                                    <div class="element grid classic3_cols animated1">
                                        <div class="one_third gallery3 grid static filterable portfolio_type themeborder" style="background-image: url('/images/@post.PostImageFilename'); background-repeat: no-repeat;">
                                            <a class="car_image" href="https://wa.me/08231231412?text=Merhaba%20@(post.Title)%20kiralamak%20istiyorum"></a>
                                            <div class="portfolio_info_wrapper">
                                                <div class="car_attribute_wrapper">
                                                    <h4>
                                                        @if (string.IsNullOrEmpty(post.Title) == false && post.Title.Length > 17)
                                                        {
                                                            @(post.Title.Substring(0, 17) + "...")
                                                        }
                                                        else
                                                        {
                                                            @post.Title
                                                        }
                                                    </h4>
                                                    <div class="car_attribute_wrapper_icon">
                                                        <div class="one_fourth">
                                                            <div class="car_attribute_icon ti-user"></div>
                                                            <div class="car_attribute_content">@post.UserNumber</div>
                                                        </div>
                                                        <div class="one_fourth">
                                                            <div class="car_attribute_icon ti-briefcase"></div>
