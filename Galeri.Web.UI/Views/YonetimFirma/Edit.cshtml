@using Entities
@model Entities.Firma
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />
<link href="~/Content/Page.css" rel="stylesheet" />
<div class="container text-lg">
    @using (Html.BeginForm("Edit", "YonetimFirma", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-lg-10">
                <img src="~/images/firmalar/@Model.FirmaImage" class="img-profile rounded-bottom" width="200" height="200" />
                @Html.HiddenFor(model => model.FirmaImage)
                <br /><br />
                <input type="file" name="PostImage4" id="PostImage4" class="form-control" /><br />
                <span class="fa fa-sign">&nbsp;</span>
                <span><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></span>
                <br /><br />
            </div>
            <div class="col-12 col-md-offset-4">
                @Html.AntiForgeryToken()

                <div class="col-md-10">
                    <h4 class="text-center">Kategori</h4>
                    <hr />
                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.FirmaName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FirmaName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-12 col-md-offset-4">
                        <div class="form-group text-center">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-success">
                                    <span class="fa fa-save"></span> Kaydet
                                </button>
                                <a href="/YonetimFirma/Index" class="btn btn-default">
                                    <span class="fa fa-arrow-circle-left"></span>Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>