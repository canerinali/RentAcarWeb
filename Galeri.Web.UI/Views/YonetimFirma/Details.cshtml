@using Entities
@model Entities.Firma
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="container">
        <div class="col-lg-10">
            <img src="~/images/firmalar/@Model.FirmaImage" class="img-profile rounded-bottom" width="200" height="200" />
            @Html.HiddenFor(model => model.FirmaImage)
            <br /><br />
        </div>
        <div class="col-12">
            <h4 class="text-center">@ViewBag.Title</h4>
            <hr />
            <dl class="col-10 text-lg">
                <dt>
                    @Html.DisplayNameFor(model => model.FirmaName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FirmaName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ModifiedOn)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ModifiedName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ModifiedName)
                </dd>
            </dl>
        </div>
        <br />
        <div class="row">
            <div class="col-12 text-center">
                <p>
                    <a href="/YonetimFirma/Edit/@Model.Id" class="btn btn-warning" title="Düzenle">
                        <span class="fa fa-edit"> Düzenle</span>
                    </a>
                    <a href="/YonetimFirma/Index" class="btn btn-default">
                        <span class="fa fa-arrow-circle-left"> Geri Dön</span>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

