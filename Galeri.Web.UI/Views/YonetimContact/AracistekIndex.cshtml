@model IEnumerable<Entities.Aracistek>
@{
    ViewBag.Title = "Gelen Mesajlar";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <h2 class="text-center">@ViewBag.Title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-offset-1">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AdSoyad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Decreption)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marka)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Model)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefon)
                    </th>

                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdSoyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Decreption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td height="100">
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td width="250">
                    <a href="/YonetimContact/AracistekDetail/@item.Id" class="btn btn-lg" title="Detaylar">
                        <span class="fa fa-search"></span>
                    </a>
                    <a href="/YonetimContact/DeleteArac/@item.Id" class="btn btn-lg" title="Kaldır">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
</div>

