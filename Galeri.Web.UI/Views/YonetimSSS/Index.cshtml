@using Dekorasyon.WebApp
@model IEnumerable<Entities.SSS>
@{ ViewBag.Title = "SSS"; }
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h2 class="text-center">@ViewBag.Title</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-11 col-md-offset-1">
            <p>
                <a href="/YonetimSSS/Create" class="btn btn-primary">
                    <span class="fa fa-edit"> Yeni</span>
                </a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Questions)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Answers)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Questions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answers)
        </td>

        <td>

            <a href="/YonetimSSS/Edit/@item.Id" class="btn btn-xs" title="Düzenle">
                <span class="fa fa-edit"></span>
            </a>

            <a href="/YonetimSSS/Delete/@item.Id" class="btn btn-xs" title="Kaldır">
                <span class="fa fa-trash"></span>
            </a>
        </td>
    </tr>}
            </table>
        </div>
    </div>
</div>